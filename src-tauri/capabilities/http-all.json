{
  "identifier": "http-all",
  "description": "Allow all HTTP and HTTPS requests (for Steam API)",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://store.steampowered.com/**"
        },
        {
          "url": "https://api.steampowered.com/**"
        }
      ]
    }
  ]
}